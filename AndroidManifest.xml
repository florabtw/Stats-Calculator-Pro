            android:windowSoftInputMode="stateAlwaysHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.nickpierson.StatsCalculatorPro.ProHomeActivity" />
        </activity>
        <activity
            android:name="me.nickpierson.StatsCalculatorPro.basic.reference.ProBasicReferenceActivity"
            android:label="@string/app_name"
            android:parentActivityName="me.nickpierson.StatsCalculatorPro.basic.ProBasicActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.nickpierson.StatsCalculatorPro.basic.ProBasicActivity" />
        </activity>
    </application>

</manifest>
