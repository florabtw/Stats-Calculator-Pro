            android:name="me.nickpierson.StatsCalculatorPro.ProHomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.nickpierson.StatsCalculatorPro.basic.ProBasicActivity"
            android:label="@string/app_name"
            android:parentActivityName="me.nickpierson.StatsCalculatorPro.ProHomeActivity"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.nickpierson.StatsCalculatorPro.ProHomeActivity" />
        </activity>
        <activity
            android:name="me.nickpierson.StatsCalculatorPro.pc.ProPCActivity"
            android:label="@string/app_name"
