<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkHomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/darker_background</item>
        <item name="blueOutlinedDrawable">@drawable/blue_dark_border_selector_dark</item>
        <item name="greenOutlinedDrawable">@drawable/green_dark_border_selector</item>
    </style>

    <style name="DarkNotHomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/darker_background</item>
        <item name="defaultOutlinedDrawable">@drawable/white_border</item>
        <item name="defaultListItemColor">@color/dark_background</item>
        <item name="defaultSelectedListItemColor">@color/dark_selected_list_item</item>
        <item name="listviewDividerColor">@color/dark_divider_color</item>
        <item name="resultsTextViewTextColor">@android:color/white</item>
        <item name="editTextColor">@android:color/white</item>
        <item name="defaultOutlinedSelector">@drawable/white_border_selector</item>
    </style>

    <style name="LightNotHomeTheme" parent="NotHomeTheme">
        <item name="defaultListItemColor">@color/fifa</item>
        <item name="defaultSelectedListItemColor">@color/white_selection</item>
        <item name="listviewDividerColor">@android:drawable/divider_horizontal_bright</item>
    </style>

</resources>